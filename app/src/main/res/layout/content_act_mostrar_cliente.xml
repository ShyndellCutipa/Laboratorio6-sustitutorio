<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActMostrarCliente"
    tools:showIn="@layout/act_mostrar_cliente"
    android:orientation="vertical">

    <EditText
        android:id="@+id/EBuscar"
        style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre del cliente"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="#0D1D8E"
        android:textColorHighlight="#9C27B0"
        android:textColorHint="#0D1D8E"
        android:typeface="serif"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible" />
    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Nombre"/>

    <TextView
        android:id="@+id/direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/email"
        android:text="Email "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefono"
        android:layout_marginTop="110dp"/>

    <Button
        android:id="@+id/BEliminar"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="210dp"
        android:background="#FFFFFF"
        android:text="Eliminar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#BE020200" />


    <Button
        android:id="@+id/BBuscar"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="210dp"
        android:background="#FFFFFF"
        android:bufferType="normal"
        android:text="Buscar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#BE020200"
        android:textColorHighlight="#FF5722"
        android:textColorHint="#FF5722" />
</RelativeLayout>
